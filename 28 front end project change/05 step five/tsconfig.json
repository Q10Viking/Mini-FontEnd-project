{
    "compilerOptions": {
      "outDir": "./dist/",
      "sourceMap": true,
      "noImplicitAny": true,
      "module": "es6",
      "target": "es5",
      "allowJs": true,
      "jsx": "preserve",    
      "moduleResolution": "node",
      "strictPropertyInitialization": false, // https://github.com/vuejs/core/issues/5347
      "baseUrl": ".",
      "paths": {
        "@/*": [        
          "src/*"
        ]
      }
    },
    "include": [
      "src/**/*.ts",
      "src/**/*.tsx",
      "src/**/*.vue"
    ],
    "exclude": [
      "node_modules"
    ]
}
  